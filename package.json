{
  "name": "@versatiles/svelte",
  "version": "0.2.0",
  "scripts": {
    "build": "vite build && npm run package",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json && npm run lint && npm run test",
    "dev": "vite dev",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint --color .",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepack": "npm run package",
    "prepublishOnly": "npm run package",
    "preview": "vite preview",
    "screenshots": "npm run build && npx tsx ./scripts/screenshots.ts",
    "release": "npm run build && npx vrt release-npm",
    "test:integration": "playwright test",
    "test:unit": "vitest run",
    "test": "npm run test:unit && npm run test:integration",
    "upgrade": "npm-check-updates -u && rm -f package-lock.json; rm -rf node_modules; npm update --save && npm install"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.spec.*",
    "!dist/**/*.test.*",
    "!dist/BBoxMap/data/*",
    "!dist/BBoxMap/helpers/*"
  ],
  "peerDependencies": {
    "svelte": "^5.0.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.0",
    "@sveltejs/adapter-auto": "^4.0.0",
    "@sveltejs/kit": "^2.16.1",
    "@sveltejs/package": "^2.3.9",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@turf/turf": "^7.2.0",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.10.10",
    "@versatiles/release-tool": "^1.2.6",
    "cookie": "^1.0.2",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-svelte": "^2.46.1",
    "geojson": "^0.5.0",
    "globals": "^15.14.0",
    "happy-dom": "^16.7.2",
    "npm-check-updates": "^17.1.14",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.3",
    "publint": "^0.3.2",
    "svelte": "^5.19.3",
    "svelte-check": "^4.1.4",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.21.0",
    "vite": "^6.0.11",
    "vitest": "^3.0.4"
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "dependencies": {
    "@versatiles/style": "^5.2.6",
    "maplibre-gl": "^5.0.1"
  }
}
