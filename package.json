{
  "name": "@versatiles/svelte",
  "version": "2.0.0",
  "license": "MIT",
  "scripts": {
    "build": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json && vite build && npm run package",
    "check-watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "check": "npm run format && npm run lint && npm run build && npm run test",
    "dev": "vite dev",
    "format": "prettier --write --log-level warn .",
    "lint": "prettier --check . && eslint --color .",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepack": "npm run build",
    "prepublishOnly": "npm run package",
    "preview": "vite preview",
    "screenshots": "npx tsx ./scripts/screenshots.ts",
    "release": "vrt release-npm",
    "test-integration": "playwright test",
    "test-unit": "vitest run",
    "test-coverage": "vitest run --coverage",
    "test": "npm run test-unit && npm run test-integration",
    "upgrade": "vrt deps-upgrade"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.spec.*",
    "!dist/**/__mocks__/*",
    "!dist/**/*.test.*",
    "!dist/BBoxMap/data/*",
    "!dist/BBoxMap/helpers/*"
  ],
  "peerDependencies": {
    "sass-embedded": "^1.86.3",
    "svelte": "^5.27.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.51.1",
    "@sveltejs/adapter-static": "^3.0.8",
    "@sveltejs/kit": "^2.20.7",
    "@sveltejs/package": "^2.3.11",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@turf/turf": "^7.2.0",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.14.1",
    "@versatiles/release-tool": "^2.4.2",
    "@vitest/coverage-v8": "^3.1.1",
    "cookie": "^1.0.2",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-svelte": "^3.5.1",
    "geojson": "^0.5.0",
    "globals": "^16.0.0",
    "happy-dom": "^17.4.4",
    "prettier": "^3.5.3",
    "prettier-plugin-svelte": "^3.3.3",
    "publint": "^0.3.12",
    "sass": "^1.86.3",
    "svelte": "^5.27.0",
    "svelte-check": "^4.1.6",
    "svelte-preprocess": "^6.0.3",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.2.6",
    "vitest": "^3.1.1"
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "dependencies": {
    "@versatiles/style": "^5.6.0",
    "maplibre-gl": "^5.3.1"
  }
}
